<% layout('layouts/boilerplate') %>
<link crossorigin="anonymous" rel="stylesheet" href="/stylesheets/edit.css">
    <div class="row flex-column">
        <h1 class="text-center">Edit Studio</h1>
        <div class="col-md-6 offset-md-3 mt-3 mb-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/studios/<%= studio._id %>?_method=PUT" method="POST" novalidate
                        class="validated-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="studio[title]"
                                value="<%= studio.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="studio[location]"
                                value="<%= studio.location %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Studio Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                    aria-describedby="price-label" name="studio[price]" value="<%= studio.price %>"
                                    required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="studio[description]"
                                required><%= studio.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="">Upload Images</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="image" name="image" multiple>
                                <label class="custom-file-label" for="image">Choose image(s)...</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <% studio.images.forEach(function (img, i) { %>
                                <img src="<%= img.thumbnail %>" alt="..." class="img-thumbnail">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                        value="<%= img.filename %>">
                                    <label for="image-<%= i %>">Delete</label>
                                </div>
                                <% }) %>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-info">Save Changes</button>
                        </div>
                    </form>
                    <a href="/studios">All Studios</a>
                </div>
            </div>
        </div>
    </div>